<% include ./partials/header %>
<canvas id="myCanvas" width="200" height="200"></canvas>
<div class="container text-center form-container">
        <h1>Reset password</h1>
        <form action="/reset/<%= token%>" method="POST">
            <input class="form-control login-field" type="password" name="password" placeholder="New password">
            <input class="form-control login-field" type="password" name="confirm" placeholder="Confirm password">
            <button class="form-login-button">Reset!</button>
        </form>
</div>


