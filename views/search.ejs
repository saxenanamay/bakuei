<% include partials/header %>
<div class="container">
    <h5>SEARCH RESULTS:</h5>
<div class="row text-center">
<% if(results.length>0){ %>
    <% results.forEach(function(cg){ %>
        <div class="col-lg-3 col-md-4 col-sm6- mb-4 d-flex align-items-stretch">
                <div class="sample-card">
                    <div class="sample-card-header">
                        <%= cg.name %>
                    </div>
                    <figure class="sample-card-body">
                        <img class="sample-card-img" src="<%= cg.image %>">
                        <figcaption class="sample-card-caption">
                            BITCONNECT<br><br>
                            <a href="/index/<%= cg._id %>" class="button">More info</a>
                        </figcaption>
                    </figure>
                </div>
           </div>
    <% }); %>
<% } else { %>
    <h1>NO RESULTS.</h1>
<% } %>
</div>
</div>
<% include partials/footer %>