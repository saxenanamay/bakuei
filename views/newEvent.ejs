<% include ./partials/header %>

<div class="container">
    <h1 style="text-align: center; color: rgba(40, 180, 133, 0.8)">Create a new event</h1>
    <div style="width: 50%; margin: 30px auto">
        <form action="/events/new" method="POST">
            <div class="form-group">
                <input type="text" class="form-control comment-box" placeholder="name" name="name" id="nname" style="display: inline;">
            </div>
            <div class="form-group">
                <input type="text" class="form-control comment-box" placeholder="image url" name="image">      
            </div>
            <div class="form-group">
                <input type="text" class="form-control comment-box" placeholder="Brief description" name="description"> 
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control comment-box" placeholder="Long description" name="longDescription" cols="30" rows="10"> </textarea> 
            </div>
            <div class="form-group">
                <input type="number" class="form-control comment-box" placeholder="Duration" name="duration">
            </div>
            <div class="form-group">
                <input type="number" class="form-control comment-box" placeholder="Rating" name="rating">
            </div>
            <div class="form-group">
                <input type="number" class="form-control comment-box" placeholder="price" name="price">
            </div>
           
            <div class="form-group">
                <button class="btn btn-lg btn-submit btn-bloc"  id="createcg">Submit</button>
            </div>
        </form>

        <a href="/index">Go back</a>
    </div>
<% include ./partials/footer %>