<% include ./partials/header %>

    <div class="ui main text container segment"  style="margin-top: 7.0em;">
        <div class="ui huge header">Edit Post - "<%= blog.title %>"</div>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title </label>
                <input type="text" name="blog[title]" value="<%= blog.title %>" placeholder="Title">
            </div>
            <div class="field">
                <label>Image </label>
                <input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="Image">
            </div>
            <div class="field">
                <label>Body </label>
                <textarea name="blog[body]" placeholder="WHAT IS ON YOUR MIND?!?!?!?!?!?!?!?!?"><%= blog.body %></textarea>
            </div>
            <input class="ui violet basic button" type="submit">
    </div> 
    

<% include ./partials/footer %>
