<% include ./partials/header %>

<div class="ui main text container segment"  style="margin-top: 7.0em;">
        <div class="ui huge header"><%= blog.title %></div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>">
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="container">
                    <p><%= blog.body %></p>
                </div>
                <% if(user && user.isAdmin){%>
                <a href="/blogs/<%= blog._id %>/edit" class="ui orange basic button">Edit</a>
                <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="delete" style="display: inline;">
                    <button class="ui red basic button">Delete</button>
                </form>
                <%}%>
            </div>
        </div>
</div>

