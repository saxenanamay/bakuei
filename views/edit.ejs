<% include partials/header %>

<div class="container">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/index/<%=campground._id%>/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control comment-box" placeholder="name" name="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control comment-box" placeholder="image url" name="image" value="<%= campground.image %>">      
                </div>
                <div class="form-group">
                    <input type="text" class="form-control comment-box" placeholder="description" name="description" value="<%= campground.description %>">      
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/index/<%= campground._id %>">Go back</a>
        </div>
</div>

<% include partials/footer %>
